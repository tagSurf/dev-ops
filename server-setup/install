#install ruby and apache2-dev

sudo apt-get install ruby1.9.1 apachedev2 build-essential libcurl4-openssl-dev apache2-mpm-worker

#create swap space
sudo dd if=/dev/zero of=/swap bs=1M count=1024
sudo mkswap /swap
sudo swapon /swap

#install rvm 

# Install rvm system-wide
bash -s stable < <(curl -s https://raw.github.com/wayneeseguin/rvm/master/binscripts/rvm-installer )
 
# get the packages required by ruby
rvm pkg install zlib
rvm pkg install openssl
 
# install the latest ruby (and make it the default)
rvm install 1.9.3
rvm 1.9.3 --default


#install passenger
gem install passenger

#install passenger-apache module
sudo passenger-install-apache2-module


